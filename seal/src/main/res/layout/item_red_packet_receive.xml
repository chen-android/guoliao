<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/middle_space"
              android:background="@color/white">
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<TextView
			android:id="@+id/item_red_packet_receive_name_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="通信原理"
			android:textSize="16sp"
			android:textColor="@color/black"/>
		
		<TextView
			android:id="@+id/item_red_packet_receive_groupe_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="群"
			android:textSize="10sp"
			android:padding="0.5dp"
			android:background="@drawable/shape_bg_yellow_2r"
			android:textColor="@color/white"
			android:layout_toRightOf="@+id/item_red_packet_receive_name_tv"
			android:layout_marginLeft="@dimen/small_space"
			android:layout_centerVertical="true"/>
		
		<TextView
			android:id="@+id/item_red_packet_receive_money_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="23,23"
			android:layout_alignParentRight="true"
			android:textSize="16sp"
			android:textColor="@color/black"/>
	</RelativeLayout>
	
	<TextView
		android:id="@+id/item_red_packet_receive_date_tv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="2017-28-28"
		android:layout_marginTop="@dimen/small_space"/>
</LinearLayout>