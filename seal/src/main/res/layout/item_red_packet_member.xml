<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/middle_space"
              android:orientation="horizontal"
              android:gravity="center_vertical">
	
	<ImageView
		android:id="@+id/item_red_packet_member_head_iv"
		android:layout_width="40dp"
		android:layout_height="40dp"/>
	
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_marginLeft="@dimen/middle_space"
		android:orientation="vertical">
		
		<TextView
			android:id="@+id/item_red_packet_member_name_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			tools:text="名字"/>
		
		<TextView
			android:id="@+id/item_red_packet_member_time_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/small_space"
			tools:text="16:46"/>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="end">
		
		<TextView
			android:id="@+id/item_red_packet_member_money_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/middle_space"
			android:textColor="@color/black"
			tools:text="1果币"/>
		
		<TextView
			android:id="@+id/item_red_packet_best_tv"
			android:visibility="gone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/ic_crown"
			android:text="手气最佳"
			android:gravity="center"
			android:drawablePadding="@dimen/small_space"
			android:textColor="#facf00"/>
	</LinearLayout>
</LinearLayout>