<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/my_wallet_srl"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/seal_bg"
		android:orientation="vertical">
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:background="@color/de_title_bg">
			
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:gravity="center_horizontal"
				android:orientation="vertical">
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_charge"
					android:drawablePadding="@dimen/middle_space"
					android:text="我的果币"
					android:textColor="@color/white"
					android:textSize="20sp"/>
				
				<TextView
					android:id="@+id/my_wallet_money_tv"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:gravity="center_vertical"
					android:textColor="@color/white"
					android:textSize="20sp"
					tools:text="100000"/>
				
				<TextView
					android:id="@+id/my_wallet_money_chinese_tv"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:gravity="center_vertical"
					android:textColor="@color/white"
					android:textSize="20sp"
					tools:text="10万"/>
			</LinearLayout>
		</RelativeLayout>
		
		<TextView
			android:id="@+id/my_wallet_coupon_tv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:background="@color/white"
			android:drawableLeft="@drawable/icon_my_wallet_red_packet"
			android:drawablePadding="@dimen/middle_space"
			android:drawableRight="@drawable/icon_right_arrow_gray"
			android:gravity="center_vertical"
			android:padding="15dp"
			android:text="我的红包"/>
		
		<TextView
			android:id="@+id/my_wallet_transfer_record_tv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="1dp"
			android:background="@color/white"
			android:drawableLeft="@drawable/icon_transfer_record"
			android:drawablePadding="@dimen/middle_space"
			android:drawableRight="@drawable/icon_right_arrow_gray"
			android:gravity="center_vertical"
			android:padding="15dp"
			android:text="我的账单"
			/>
		
		<TextView
			android:id="@+id/my_wallet_lock_money_tv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="1dp"
			android:background="@color/white"
			android:drawableLeft="@drawable/icon_my_wallet_forzen"
			android:drawablePadding="@dimen/middle_space"
			android:drawableRight="@drawable/icon_right_arrow_gray"
			android:gravity="center_vertical"
			android:padding="15dp"
			android:text="冻结果币"/>
		
		<TextView
			android:id="@+id/my_wallet_setting_tv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="1dp"
			android:background="@color/white"
			android:drawableLeft="@drawable/icon_my_wallet_safe"
			android:drawablePadding="@dimen/middle_space"
			android:drawableRight="@drawable/icon_right_arrow_gray"
			android:gravity="center_vertical"
			android:padding="15dp"
			android:text="安全设置"/>
	</LinearLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>