<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/seal_bg">
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="200dp"
		android:background="@color/de_title_bg">
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center_horizontal"
			android:layout_centerInParent="true">
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="我的果币"
				android:textColor="@color/white"
				android:drawableLeft="@drawable/icon_charge"
				android:drawablePadding="@dimen/middle_space"
				android:textSize="20sp"/>
			
			<TextView
				android:id="@+id/my_wallet_money_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="100000"
				android:textSize="20sp"
				android:layout_marginTop="10dp"
				android:gravity="center_vertical"
				android:textColor="@color/white"/>
			
			<TextView
				android:id="@+id/my_wallet_money_chinese_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="10万"
				android:textSize="20sp"
				android:layout_marginTop="10dp"
				android:gravity="center_vertical"
				android:textColor="@color/white"/>
		</LinearLayout>
	</RelativeLayout>
	
	<TextView
		android:id="@+id/my_wallet_coupon_tv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="我的红包"
		android:padding="15dp"
		android:drawableLeft="@drawable/icon_my_wallet_red_packet"
		android:drawablePadding="@dimen/middle_space"
		android:gravity="center_vertical"
		android:layout_marginTop="10dp"
		android:drawableRight="@drawable/icon_right_arrow_gray"
		android:background="@color/white"/>
	
	<TextView
		android:id="@+id/my_wallet_transfer_record_tv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="转账记录"
		android:padding="15dp"
		android:drawableLeft="@drawable/icon_transfer_record"
		android:drawablePadding="@dimen/middle_space"
		android:gravity="center_vertical"
		android:layout_marginTop="1dp"
		android:background="@color/white"
		android:drawableRight="@drawable/icon_right_arrow_gray"
		/>
	
	<TextView
		android:id="@+id/my_wallet_lock_money_tv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="冻结果币"
		android:drawableLeft="@drawable/icon_my_wallet_forzen"
		android:drawablePadding="@dimen/middle_space"
		android:gravity="center_vertical"
		android:padding="15dp"
		android:layout_marginTop="1dp"
		android:drawableRight="@drawable/icon_right_arrow_gray"
		android:background="@color/white"/>
	
	<TextView
		android:id="@+id/my_wallet_setting_tv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="安全设置"
		android:padding="15dp"
		android:drawableLeft="@drawable/icon_my_wallet_safe"
		android:drawablePadding="@dimen/middle_space"
		android:gravity="center_vertical"
		android:layout_marginTop="1dp"
		android:drawableRight="@drawable/icon_right_arrow_gray"
		android:background="@color/white"/>
</LinearLayout>