<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/bg_red_packet_title">
		
		<TextView
			android:id="@+id/red_packet_detail_back_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="返回"
			android:textColor="@color/color_e0ac59"
			android:layout_centerVertical="true"
			android:layout_margin="@dimen/middle_space"
			android:textSize="16sp"/>
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:text="果聊红包"
			android:layout_centerVertical="true"
			android:textColor="@color/color_e0ac59"
			android:textSize="18sp"
			android:textStyle="bold"
			android:layout_marginTop="@dimen/middle_space"/>
	</RelativeLayout>
	
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="-5dp">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/bg_redpacket_middle_gray">
				
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="80dp"
					android:background="@drawable/bg_my_red_packet_top">
				
				</RelativeLayout>
				
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:gravity="center_horizontal"
					android:layout_centerInParent="true"
					android:layout_marginTop="40dp">
					
					<ImageView
						android:id="@+id/red_packet_detail_head_iv"
						android:layout_width="60dp"
						android:layout_height="60dp"/>
					
					<TextView
						android:id="@+id/red_packet_detail_name_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="cs的红包\n恭喜发财，大吉大利"
						android:gravity="center"
						android:textColor="@color/black"
						android:lineSpacingExtra="10dp"
						android:layout_marginBottom="20dp"/>
					
					<LinearLayout
						android:id="@+id/red_packet_detail_money_ll"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_marginTop="20dp"
						android:layout_marginBottom="30dp"
						android:visibility="gone"
						tools:visibility="visible">
						
						<TextView
							android:id="@+id/red_packet_detail_money_tv"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							tools:text="3"
							android:textColor="@color/black"
							android:textSize="50sp"/>
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/black"
							android:textSize="12sp"
							android:layout_marginLeft="@dimen/small_space"
							android:text="果币"/>
					</LinearLayout>
				</LinearLayout>
			</RelativeLayout>
			
			<LinearLayout
				android:id="@+id/red_packet_detail_user_detail_ll"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:divider="@drawable/shape_line_break"
				android:showDividers="middle">
				
				<TextView
					android:id="@+id/red_packet_detail_status_tv"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					tools:text="红包金额1元，等待对方领取"
					android:padding="@dimen/middle_space"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>

</LinearLayout>