<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/transfer_record_refresh_fl"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		
		<TextView
			android:id="@+id/transfer_filter_tv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/color_f0f0f0"
			android:text="2013年08月"
			android:textColor="@color/color_434343"
			android:drawableRight="@drawable/icon_transfer_record_filter"
			android:padding="10dp"/>
		
		<ListView
			android:id="@+id/transfer_record_lv"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:divider="@drawable/shape_divider_gray"
			android:dividerHeight="0.5dp"
			android:layout_below="@id/transfer_filter_tv"/>
		
		<TextView
			android:id="@+id/transfer_record_no_data_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="暂无转账数据"
			android:textSize="18sp"
			android:visibility="gone"/>
	</RelativeLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>
