<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="#ebebeb"
              android:orientation="vertical">
	
	<LinearLayout
		android:id="@+id/start_user_profile"
		android:layout_width="match_parent"
		android:layout_height="80dp"
		android:layout_marginTop="20dp"
		android:background="@drawable/btn_list_item_bg"
		android:clickable="true"
		android:orientation="horizontal">

		<com.kuaishou.hb.server.widget.SelectableRoundedImageView
			android:id="@+id/mine_header"
			android:layout_width="64dp"
			android:layout_height="64dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="14dp"
			android:scaleType="centerCrop"
			app:sriv_left_bottom_corner_radius="3dip"
			app:sriv_left_top_corner_radius="3dip"
			app:sriv_right_bottom_corner_radius="3dip"
			app:sriv_right_top_corner_radius="3dip"/>
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:orientation="vertical">
			
			<TextView
				android:id="@+id/mine_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="14dp"
				android:ellipsize="end"
				android:maxLines="1"
				android:text="@string/seal_mine_fragment_user_portrait"
				android:textColor="@color/text_color"
				android:textSize="16sp"/>
			
			<TextView
				android:id="@+id/mine_userid"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="14dp"
				tools:text="用户id:12341234"
				android:layout_marginTop="@dimen/small_space"/>
		</LinearLayout>
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/mine_setting"
		android:layout_width="match_parent"
		android:layout_height="45.5dp"
		android:layout_marginTop="20dp"
		android:background="@drawable/btn_list_item_bg"
		android:clickable="true">
		
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="14dp"
			android:drawableLeft="@drawable/mine_set"
			android:drawableRight="@drawable/icon_right_arrow_gray"
			android:paddingRight="@dimen/middle_space"
			android:drawablePadding="14sp"
			android:text="@string/mine_setting"
			android:textColor="@color/text_color"
			android:textSize="16sp"/>
	
	
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/my_wallet"
		android:layout_width="match_parent"
		android:layout_height="45.5dp"
		android:layout_marginTop="1dp"
		android:background="@drawable/btn_list_item_bg"
		android:clickable="true">
		
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="14dp"
			android:drawableLeft="@drawable/_wallet"
			android:drawableRight="@drawable/icon_right_arrow_gray"
			android:paddingRight="@dimen/middle_space"
			android:drawablePadding="14sp"
			android:text="@string/my_wallet"
			android:textColor="@color/text_color"
			android:textSize="16sp"/>
	
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/my_share"
		android:layout_width="match_parent"
		android:layout_height="45.5dp"
		android:layout_marginTop="1dp"
		android:background="@drawable/btn_list_item_bg"
		android:clickable="true">
		
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="14dp"
			android:drawableLeft="@drawable/icon_share"
			android:drawableRight="@drawable/icon_right_arrow_gray"
			android:paddingRight="@dimen/middle_space"
			android:drawablePadding="14sp"
			android:text="分享赚快豆"
			android:textColor="@color/text_color"
			android:textSize="16sp"/>
	
	</LinearLayout>
	
	<RelativeLayout
		android:id="@+id/mine_buy_video"
		android:layout_width="match_parent"
		android:layout_height="45.5dp"
		android:layout_marginTop="20dp"
		android:background="@drawable/btn_list_item_bg"
		android:paddingRight="@dimen/middle_space">
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="14dp"
			android:drawableLeft="@drawable/icon_video"
			android:layout_centerVertical="true"
			android:drawablePadding="14sp"
			android:textColor="@color/text_color"
			android:textSize="16sp"
			android:text="购买视频空间"/>
		
		<TextView
			android:id="@+id/mine_video_limit_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:drawableRight="@drawable/icon_right_arrow_gray"
			android:text="@string/video_account"
			android:layout_centerVertical="true"
			android:drawablePadding="@dimen/small_space"/>
	</RelativeLayout>
	
	<LinearLayout
		android:id="@+id/mine_service"
		android:layout_width="match_parent"
		android:layout_height="45.5dp"
		android:layout_marginTop="20dp"
		android:background="@drawable/btn_list_item_bg"
		android:clickable="true">
		
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="14dp"
			android:drawableLeft="@drawable/mine_service"
			android:drawableRight="@drawable/icon_right_arrow_gray"
			android:paddingRight="@dimen/middle_space"
			android:drawablePadding="14sp"
			android:text="@string/mine_service"
			android:textColor="@color/text_color"
			android:textSize="16sp"/>
	
	
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/mine_url"
		android:layout_width="match_parent"
		android:layout_height="45.5dp"
		android:layout_marginTop="1dp"
		android:background="@drawable/btn_list_item_bg"
		android:clickable="true">
		
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="14dp"
			android:drawableLeft="@drawable/mine_url"
			android:drawableRight="@drawable/icon_right_arrow_gray"
			android:paddingRight="@dimen/middle_space"
			android:drawablePadding="14sp"
			android:text="@string/mine_url"
			android:textColor="@color/text_color"
			android:textSize="16sp"/>
	
	
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/mine_xiaoneng"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:clickable="true"
		android:visibility="gone"
		android:orientation="vertical">
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="#fff">
			
			<View
				android:layout_width="match_parent"
				android:layout_height="0.25dp"
				android:layout_marginLeft="14dp"
				android:layout_marginRight="14dp"
				android:background="#dfdfdd"/>
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="45.5dp"
			android:background="@drawable/btn_list_item_bg">
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="14dp"
				android:drawableLeft="@drawable/mine_service"
				android:drawablePadding="14sp"
				android:text="@string/main_customer_xn"
				android:textColor="@color/text_color"
				android:textSize="16sp"/>
		
		</LinearLayout>
	</LinearLayout>


</LinearLayout>