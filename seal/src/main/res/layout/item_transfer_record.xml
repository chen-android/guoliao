<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/middle_space">
	
	<com.GuoGuo.JuicyChat.server.widget.SelectableRoundedImageView
		android:id="@+id/item_transfer_record_header_iv"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_gravity="center_vertical"
		android:scaleType="centerCrop"
		app:sriv_left_bottom_corner_radius="50dp"
		app:sriv_right_top_corner_radius="50dp"
		app:sriv_left_top_corner_radius="50dp"
		app:sriv_right_bottom_corner_radius="50dp"
		/>
	
	<LinearLayout
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginLeft="@dimen/middle_space"
		android:layout_gravity="center_vertical">
		
		<TextView
			android:id="@+id/item_transfer_record_title_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="转账-来自母上"
			android:textColor="@color/black"
			android:textSize="16sp"/>
		
		<TextView
			android:id="@+id/item_transfer_record_date_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="2017-03-04 12:12:12"
			android:layout_marginTop="@dimen/middle_space"/>
	</LinearLayout>
	
	<TextView
		android:id="@+id/item_transfer_record_money_tv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		tools:text="- 123213"
		android:textColor="@color/black"
		android:textSize="17sp"/>
</LinearLayout>