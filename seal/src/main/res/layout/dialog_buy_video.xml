<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:padding="@dimen/middle_space"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<TextView
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="24dp"
		android:text="@string/buy_video_title"
		android:textColor="@color/black"
		android:textSize="20sp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
	
	<Button
		android:id="@+id/close_bt"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_marginRight="16dp"
		android:layout_marginTop="8dp"
		android:background="@drawable/btn_close"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
	
	<TextView
		android:id="@+id/textView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="24dp"
		android:text="@string/buy_video_count"
		android:textColor="@color/black"
		android:textSize="18sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.202"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView"/>
	
	<EditText
		android:id="@+id/buy_count_et"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="32dp"
		android:layout_marginRight="32dp"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:background="@drawable/_bg_bribery_open"
		android:ems="10"
		android:gravity="right"
		android:inputType="numberSigned"
		android:padding="@dimen/middle_space"
		android:textColor="@color/black"
		app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toEndOf="@+id/textView2"/>
	
	<TextView
		android:id="@+id/textView3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:text="@string/buy_video_amount"
		android:textColor="@color/black"
		android:textSize="18sp"
		app:layout_constraintStart_toStartOf="@+id/textView2"
		app:layout_constraintTop_toBottomOf="@+id/textView2"/>
	
	<TextView
		android:id="@+id/pay_amount_tv"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		tools:text="10"
		android:textColor="@color/black"
		app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
		app:layout_constraintEnd_toStartOf="@+id/balance_tv"/>
	
	<TextView
		android:id="@+id/balance_tv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="(余额200)"
		app:layout_constraintBaseline_toBaselineOf="@+id/pay_amount_tv"
		app:layout_constraintEnd_toEndOf="@+id/buy_count_et"/>
	
	<Button
		android:id="@+id/confirm_bt"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="32dp"
		android:background="@drawable/selector_blue_round_enable_btn"
		android:text="@string/btn_confirm_pay"
		android:padding="@dimen/middle_space"
		android:textColor="@color/selector_white_gray_enable_color"
		android:enabled="true"
		app:layout_constraintEnd_toEndOf="@+id/balance_tv"
		app:layout_constraintStart_toStartOf="@+id/textView3"
		app:layout_constraintTop_toBottomOf="@+id/textView3"/>
</android.support.constraint.ConstraintLayout>