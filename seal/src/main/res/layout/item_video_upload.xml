<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:padding="@dimen/middle_space">
	
	<ImageView
		android:id="@+id/upload_video_iv"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:scaleType="fitXY"
		android:src="@drawable/icon_video_default"/>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginLeft="@dimen/middle_space">
		
		<TextView
			android:id="@+id/upload_video_name_tv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:text="小香菇"
			android:textColor="@color/black"
			android:textSize="16sp"
			android:maxLines="1"
			android:ellipsize="end"/>
		
		<TextView
			android:id="@+id/upload_video_duration_tv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:text="时长 02:05"
			android:layout_marginTop="@dimen/small_space"/>
		
		<RelativeLayout
			android:id="@+id/upload_video_progress_rl"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:visibility="visible">
			
			<ProgressBar
				android:id="@+id/upload_video_pb"
				style="@style/rc_pb_file_download_progress"
				android:layout_width="match_parent"
				android:layout_height="8dp"
				tools:max="100"
				tools:progress="30"
				android:layout_marginTop="@dimen/middle_space"
				android:layout_marginRight="10dp"
				android:layout_toLeftOf="@+id/upload_tip"
				android:layout_centerVertical="true"/>
			
			<TextView
				android:id="@+id/upload_tip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:text="上传中..."
				android:textSize="12sp"/>
		</RelativeLayout>
	
	</LinearLayout>
</LinearLayout>