<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context="com.GuoGuo.JuicyChat.ui.activity.TransferDetailActivity"
	android:orientation="vertical"
	android:background="@color/background">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="@color/white"
		android:padding="@dimen/middle_space"
		android:gravity="center_vertical">
		
		<com.GuoGuo.JuicyChat.server.widget.SelectableRoundedImageView
			android:id="@+id/redpacket_record_detail_head_iv"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:scaleType="centerCrop"
			app:sriv_left_bottom_corner_radius="30dp"
			app:sriv_right_top_corner_radius="30dp"
			app:sriv_left_top_corner_radius="30dp"
			app:sriv_right_bottom_corner_radius="30dp"/>
		
		<TextView
			android:id="@+id/redpacket_record_detail_type_tv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:text="通讯原理"
			android:textColor="@color/black"
			android:layout_marginLeft="@dimen/middle_space"/>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:layout_marginTop="@dimen/middle_space"
		android:orientation="vertical"
		android:padding="@dimen/middle_space">
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<TextView
				android:id="@+id/redpacket_record_detail_money_title_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="付款金额"
				android:layout_centerVertical="true"/>
			
			<TextView
				android:id="@+id/redpacket_record_detail_money_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="+12,3421,34果币"
				android:layout_alignParentRight="true"
				android:textColor="@color/black"
				android:textSize="18sp"/>
		</RelativeLayout>
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="0.8dp"
			android:background="@color/background"
			android:layout_marginTop="@dimen/large_space"/>
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/middle_space">
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="红包详情"
				android:layout_centerVertical="true"/>
			
			<TextView
				android:id="@+id/redpacket_record_detail_review_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="查看"
				android:textColor="@color/title_bar_color"
				android:layout_alignParentRight="true"/>
		</RelativeLayout>
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/middle_space">
			
			<TextView
				android:id="@+id/redpacket_record_detail_send_title_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="发包人"
				android:layout_centerVertical="true"/>
			
			<TextView
				android:id="@+id/redpacket_record_detail_send_name_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="cs"
				android:layout_alignParentRight="true"/>
		</RelativeLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/middle_space"
			android:orientation="horizontal">
			
			<TextView
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="红包说明"
				android:layout_centerVertical="true"/>
			
			<TextView
				android:id="@+id/redpacket_record_detail_description_tv"
				android:layout_width="0dp"
				android:layout_weight="2"
				android:layout_height="wrap_content"
				android:gravity="right"
				tools:text="无"
				android:layout_alignParentRight="true"/>
		</LinearLayout>
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/middle_space">
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="红包状态"
				android:layout_centerVertical="true"/>
			
			<TextView
				android:id="@+id/redpacket_record_detail_status_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="已收款"
				android:layout_alignParentRight="true"/>
		</RelativeLayout>
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/middle_space">
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="红包时间"
				android:layout_centerVertical="true"/>
			
			<TextView
				android:id="@+id/redpacket_record_detail_date_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="2017-08-08 05:05:12"
				android:layout_alignParentRight="true"/>
		</RelativeLayout>
	</LinearLayout>

</LinearLayout>
