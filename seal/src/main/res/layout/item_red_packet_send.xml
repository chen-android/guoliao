<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/middle_space"
              android:background="@color/white">
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<TextView
			android:id="@+id/item_red_packet_send_name_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="群红包"
			android:textSize="16sp"
			android:textColor="@color/black"/>
		
		<TextView
			android:id="@+id/item_red_packet_send_money_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="23,23"
			android:layout_alignParentRight="true"
			android:textSize="16sp"
			android:textColor="@color/black"/>
	</RelativeLayout>
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/small_space">
		
		<TextView
			android:id="@+id/item_red_packet_send_date_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="2017-28-28"/>
		
		<TextView
			android:id="@+id/item_red_packet_send_status_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			tools:text="已领取3/5个"/>
	</RelativeLayout>


</LinearLayout>