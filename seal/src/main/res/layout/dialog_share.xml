<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_bg_white_5r"
              android:divider="@drawable/shape_line_break"
              android:showDividers="middle">
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_gravity="center_horizontal"
		android:paddingLeft="20dp"
		android:paddingRight="20dp"
		android:paddingTop="10dp"
		android:paddingBottom="10dp">
		
		<LinearLayout
			android:id="@+id/dialog_share_wechat_ll"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center_horizontal">
			
			<ImageView
				android:id="@+id/dialog_share_wechat_iv"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:src="@drawable/icon_wechat"
				android:scaleType="fitXY"/>
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="微信好友"
				android:layout_marginTop="10dp"
				android:textColor="@color/black"/>
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/dialog_share_wechat_friends_ll"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginLeft="30dp"
			android:gravity="center_horizontal">
			
			<ImageView
				android:id="@+id/dialog_share_wechat_friends_iv"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:src="@drawable/icon_wechat_friends"
				android:scaleType="fitXY"/>
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="朋友圈"
				android:layout_marginTop="10dp"
				android:textColor="@color/black"/>
		</LinearLayout>
	</LinearLayout>
	
	<TextView
		android:id="@+id/share_cancel_tv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="取消"
		android:textSize="20sp"
		android:textColor="@color/black"
		android:gravity="center"
		android:padding="15dp"/>

</LinearLayout>