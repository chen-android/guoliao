<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.GuoGuo.JuicyChat.ui.activity.TransferDetailActivity"
	android:orientation="vertical"
	android:background="@color/background">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="@color/white"
		android:padding="@dimen/middle_space"
		android:gravity="center_vertical">
		
		<ImageView
			android:id="@+id/transfer_detail_touser_head_iv"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:scaleType="centerCrop"/>
		
		<TextView
			android:id="@+id/transfer_detail_touser_name_tv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:text="通讯原理"
			android:textColor="@color/black"
			android:layout_marginLeft="@dimen/middle_space"/>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:layout_marginTop="@dimen/middle_space"
		android:orientation="vertical"
		android:padding="@dimen/middle_space">
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="金额"
				android:layout_centerVertical="true"/>
			
			<TextView
				android:id="@+id/transfer_detail_money_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="+12,3421,34果币"
				android:layout_alignParentRight="true"
				android:textColor="@color/black"
				android:textSize="18sp"/>
		</RelativeLayout>
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="0.8dp"
			android:background="@color/background"
			android:layout_marginTop="@dimen/large_space"/>
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/middle_space">
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="收款方"
				android:layout_centerVertical="true"/>
			
			<TextView
				android:id="@+id/transfer_detail_receive_name_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="cs"
				android:layout_alignParentRight="true"/>
		</RelativeLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/middle_space"
			android:orientation="horizontal">
			
			<TextView
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="转账说明"
				android:layout_centerVertical="true"/>
			
			<TextView
				android:id="@+id/transfer_detail_description_tv"
				android:layout_width="0dp"
				android:layout_weight="2"
				android:layout_height="wrap_content"
				tools:text="无"
				android:gravity="right"
				android:layout_alignParentRight="true"/>
		</LinearLayout>
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/middle_space">
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="当前状态"
				android:layout_centerVertical="true"/>
			
			<TextView
				android:id="@+id/transfer_detail_status_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="已收款"
				android:layout_alignParentRight="true"/>
		</RelativeLayout>
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/middle_space">
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="转账时间"
				android:layout_centerVertical="true"/>
			
			<TextView
				android:id="@+id/transfer_detail_date_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="2017-08-08 05:05:12"
				android:layout_alignParentRight="true"/>
		</RelativeLayout>
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/middle_space">
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="支付方式"
				android:layout_centerVertical="true"/>
			
			<TextView
				android:id="@+id/transfer_detail_pay_type_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="转账"
				android:layout_alignParentRight="true"/>
		</RelativeLayout>
	</LinearLayout>

</LinearLayout>
